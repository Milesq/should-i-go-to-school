{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": ["prettier", "eslint:recommended"],
    "plugins": ["prettier"],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "prettier/prettier": "error",
        "linebreak-style": ["error", "windows"],
        "indent": [
            "error",
            4
        ],
        "no-unused-vars": "warn",
        "no-console": "off"
    }
}
